{
    "name": "ethseoul-desci-contracts",
    "version": "1.0.0",
    "description": "Contracts for sample project.",
    "license": "MIT",
    "scripts": {
        "clean": "npx hardhat clean",
        "compile": "npx hardhat compile",
        "test": "npx hardhat test",
        "coverage": "npx hardhat coverage",
        "lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:solhint",
        "lint:eslint": "eslint \"scripts/**/*.ts\" \"test/**/*.ts\"",
        "lint:prettier": "prettier --check \"contracts/*.sol\" \"scripts/**/*.ts\" \"test/**/*.ts\"",
        "lint:solhint": "solhint \"contracts/*.sol\"",
        "lint-fix": "npm run lint-fix:eslint && npm run lint-fix:prettier && npm run lint-fix:solhint",
        "lint-fix:eslint": "eslint --fix \"scripts/**/*.ts\" \"test/**/*.ts\"",
        "lint-fix:prettier": "prettier --write \"contracts/*.sol\" \"scripts/**/*.ts\" \"test/**/*.ts\"",
        "lint-fix:solhint": "solhint --fix \"contracts/*.sol\""
    },
    "dependencies": {
        "@openzeppelin/contracts": "^4.6.0"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.1.0",
        "@nomiclabs/hardhat-etherscan": "^3.1.0",
        "@nomiclabs/hardhat-waffle": "^2.0.3",
        "@typechain/ethers-v5": "^10.1.0",
        "@typechain/hardhat": "^6.1.2",
        "@types/chai-as-promised": "^7.1.5",
        "@types/mocha": "^9.1.1",
        "@types/node": "^16.11.11",
        "@typescript-eslint/eslint-plugin": "^5.32.0",
        "@typescript-eslint/parser": "^5.32.0",
        "chai": "^4.3.6",
        "chai-as-promised": "^7.1.1",
        "dotenv": "^16.0.1",
        "eslint": "^8.17.0",
        "eslint-config-prettier": "^8.5.0",
        "ethereum-waffle": "^3.4.4",
        "ethers": "^5.6.9",
        "hardhat": "^2.10.1",
        "prettier": "^2.7.1",
        "prettier-plugin-solidity": "^1.0.0-beta.24",
        "solhint": "^3.3.7",
        "solidity-coverage": "^0.7.21",
        "ts-node": "^10.9.1",
        "typechain": "^8.1.0",
        "typescript": "^4.7.4"
    }
}
